<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- ========== VARIABLES ========== -->
    <property name="LOG_PATH" value="logs" />
    <property name="APP_NAME" value="pawmart" />

    <!-- ========== FORMATO PARA CONSOLA ========== -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>
                %d{yyyy-MM-dd HH:mm:ss} [%highlight(%-5level)] [%cyan(%logger{36})] - %msg%n
            </pattern>
        </encoder>
    </appender>

    <!-- ========== LOG INFO/DEBUG → archivo rotado por día ========== -->
    <appender name="FILE_APP" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/${APP_NAME}.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/${APP_NAME}.%d{yyyy-MM-dd}.gz</fileNamePattern>
            <maxHistory>15</maxHistory> <!-- Conservar últimos 15 días -->
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- ========== LOG SOLO PARA ERRORES ========== -->
    <appender name="ERROR_APP" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/${APP_NAME}-errors.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/${APP_NAME}-errors.%d{yyyy-MM-dd}.gz</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>ERROR</level>
        </filter>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- ========== NIVEL GLOBAL DE LOG ========== -->
    <root level="INFO">
        <appender-ref ref="CONSOLE" />
        <appender-ref ref="FILE_APP" />
        <appender-ref ref="ERROR_APP" />
    </root>

</configuration>